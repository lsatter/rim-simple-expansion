<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!-- 安装沉眠协议芯片手术 -->
<RecipeDef ParentName="SurgeryInstallImplantBase">
    <defName>LSSE_InstallVigilanceProtocolImplant</defName>
    <label>安装沉眠协议芯片</label>
    <description>安装沉眠协议芯片</description>
    <descriptionHyperlinks>
      <ThingDef>LSSE_VigilanceProtocolImplant</ThingDef>
      <HediffDef>LSSE_VigilanceProtocol</HediffDef>
    </descriptionHyperlinks>
    <jobString>正在安装沉眠协议芯片</jobString>
    <ingredients>
      <li>
        <filter><thingDefs><li>LSSE_VigilanceProtocolImplant</li></thingDefs></filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>LSSE_VigilanceProtocolImplant</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Brain</li>
    </appliedOnFixedBodyParts>
    <addsHediff>LSSE_VigilanceProtocol</addsHediff>
</RecipeDef>

<!-- 移除沉眠协议芯片 -->
<RecipeDef ParentName="SurgeryRemoveImplantBase">
    <defName>LSSE_RemoveVigilanceProtocolImplant</defName>
    <label>移除沉眠协议芯片</label>
    <description>移除沉眠协议芯片</description>
    <descriptionHyperlinks>
      <ThingDef>LSSE_VigilanceProtocolImplant</ThingDef>
      <HediffDef>LSSE_VigilanceProtocol</HediffDef>
    </descriptionHyperlinks>
    <jobString>正在移除沉眠协议芯片</jobString>
    <removesHediff>LSSE_VigilanceProtocol</removesHediff>
</RecipeDef>


<!-- 解除食物中毒手术 -->
<RecipeDef ParentName="SurgeryFlesh">
    <defName>LSSE_RemoveFP</defName>
    <label>解除食物中毒</label>
    <description>为目标解除食物中毒</description>
    <jobString>正在解除食物中毒</jobString>
    <workerClass>Recipe_RemoveHediff</workerClass>
    <removesHediff>FoodPoisoning</removesHediff>
    <displayPriority>0</displayPriority>
    <workAmount>6</workAmount>
    <surgerySuccessChanceFactor>100</surgerySuccessChanceFactor>
    <hideBodyPartNames>true</hideBodyPartNames>
    <isViolation>true</isViolation>
    <targetsBodyPart>false</targetsBodyPart>
</RecipeDef>

<!-- 治愈基因重组 -->
<RecipeDef ParentName="SurgeryFlesh">
    <defName>LSSE_RemoveXR</defName>
    <label>治疗基因重组</label>
    <description>通过使用珍贵的闪耀世界医药来治愈基因重组</description>
    <workerClass>Recipe_RemoveHediff</workerClass>
    <jobString>治愈基因重组</jobString>
    <workAmount>2000</workAmount>
    <hideBodyPartNames>true</hideBodyPartNames>
    <isViolation>false</isViolation>
    <targetsBodyPart>false</targetsBodyPart>
    <removesHediff>XenogermReplicating</removesHediff>
    <successfullyRemovedHediffMessage>{1}的基因重组已治愈</successfullyRemovedHediffMessage>
    <skillRequirements>
      <Medicine>10</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>MedicineUltratech</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
    </fixedIngredientFilter>
</RecipeDef>

